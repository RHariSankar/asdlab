<link rel="stylesheet" href="/css/dashboard.css">
<link rel="stylesheet" href="/css/bootstrap.css">

<link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
<link rel="stylesheet" href="https://code.getmdl.io/1.3.0/material.orange-amber.min.css" /> 


<body style="background-color: #331045";"> 
<% include partials/navbar %>

      <div class="cards" align='center'>
        <% for(let i=0;i<docs.length;i++){ %>
        <div class="demo-card-wide mdl-card mdl-shadow--2dp" id="post_card">
          <div class="mdl-card__title">
            <h4 class="mdl-card__title-text"><%= docs[i].title %></h4>
            
  
          </div>
          <div class="mdl-card__supporting-text">
          <%=  docs[i].idea %>

          </div>
          <div class="mdl-card__menu">
              <button class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent" >
                  View
                </button>
        <div class="material-icons mdl-badge mdl-badge--overlap" data-badge="<%= docs[i].like_count %>">favorite</div>
            
        </div>
          
          <div class="mdl-card__actions mdl-card--border" style="margin-bottom:2px;" >
            <form   action="/addlike" method="post" id="like_form">
              <button class="mdl-button mdl-button--icon mdl-js-button mdl-js-ripple-effect" id="like" name="pid" value="<%= docs[i].post_id %>" >
              <i class="material-icons" style="font-size:28px">favorite</i>
            </button></form>
             <button class="mdl-button mdl-button--icon mdl-js-button mdl-js-ripple-effect" id="comment">
              <i class="material-icons style="font-size:35px"" >textsms</i>
            </button>
             <button class="mdl-button mdl-button--icon mdl-js-button mdl-js-ripple-effect" id="share">
              <i class="material-icons" style="font-size:27px">rss_feed</i>
            </button>

            <span class="mdl-chip mdl-chip--contact" id="chip">
                <span class="mdl-chip__contact mdl-color--teal mdl-color-text--white">H</span>
                <span class="mdl-chip__text">Contact Chip</span>
            </span>
        
    
          </div>
        
        </div>
      </a>
        <% }%>
    </div>

    

    <a href="http://localhost:8080/feedpost"><div class="fab">+</div></a>

</body>
<script src="https://code.getmdl.io/1.3.0/material.min.js"></script>
<script src="/js/bootstrap.min.js"></script> 
</html>
